<?xml version="1.0"?>
<robot name="mobile_robot"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Color Macros -->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>

  <!-- Base Properties -->
  <xacro:property name="body_length" value="0.2" />
  <xacro:property name="body_width" value="0.1" />
  <xacro:property name="body_height" value="0.05" />
  <xacro:property name="ground_offset" value="0.04" />

  <!-- Wheel Properties -->
  <xacro:property name="wheelbase" value="0.1" />
  <xacro:property name="wheel_radius" value="0.04" />
  <xacro:property name="wheel_length" value="0.02" />

  <link name="base_link">
    <visual>
      <origin rpy="1.57079632679 0.0 1.57079632679" xyz="0.0 0.0 0.043"/>
      <geometry>
        <mesh filename="package://jetbot_ccai/stl/JetBot-Chassis.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.015" />
      <geometry>
        <mesh filename="package://jetbot_ccai/stl/JetBot-Chassis.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="-0.08 -0.06 0.015" rpy="0 0 0" />
    <parent link="base_plate" />
    <child link="right_wheel" />
    <axis xyz="-1 0 0" />
  </joint>

  <link name="right_wheel">
    <visual>
      <origin rpy="0 0 0" xyz="0.127 0.09174 -0.0127"/>
      <geometry>
        <mesh filename="package://jetbot_ccai/stl/JetBot-Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.127 0.09174 -0.0127"/>
      <geometry>
        <mesh filename="package://jetbot_ccai/stl/JetBot-Wheel.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0.08 -0.06 0.015" rpy="0 0 0" />
    <parent link="base_plate" />
    <child link="left_wheel" />
    <axis xyz="-1 0 0" />
  </joint>

  <link name="left_wheel">
    <visual>
      <origin rpy="0 0 0" xyz="-0.1355 0.09174 -0.0127"/>
      <geometry>
        <mesh filename="package://jetbot_ccai/stl/JetBot-Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="-0.1355 0.09174 -0.0127"/>
      <geometry>
        <mesh filename="package://jetbot_ccai/stl/JetBot-Wheel.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <joint name="laser_joint" type="fixed">
    <origin xyz="0 0.040 0.090" rpy="0 0 1.5708" />
    <parent link="base_plate" />
    <child link="laser" />
  </joint>

  <link name="laser">
    <visual>
      <origin rpy="0 0 -1.5708" xyz="0.03 -0.248 -0.09"/>
      <geometry>
        <mesh filename="package://jetbot_ccai/stl/RpLidar.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.242 0.084 -0.098" />
      <geometry>
        <mesh filename="package://jetbot_ccai/stl/RpLidar.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

</robot>
